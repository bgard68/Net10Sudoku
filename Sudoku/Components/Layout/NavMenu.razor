@using Sudoku.Application.Services
@inject ThemeService ThemeService
@implements IDisposable

<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Sudoku</a>
        <button class="theme-toggle" @onclick="ToggleTheme" title="Toggle dark/light mode">
            @if (ThemeService.IsDarkMode)
            {
                <span class="bi bi-sun-fill"></span>
            }
            else
            {
                <span class="bi bi-moon-fill"></span>
            }
        </button>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-grid-3x3-gap-fill" aria-hidden="true"></span> Sudoku Game
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="bi bi-info-circle-fill" aria-hidden="true"></span> About
            </NavLink>
        </div>
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += OnThemeChanged;
    }

    private void ToggleTheme()
    {
        ThemeService.ToggleTheme();
    }

    private void OnThemeChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= OnThemeChanged;
    }
}

